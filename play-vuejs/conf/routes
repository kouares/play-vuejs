# Routes
# This file defines all application routes (Higher priority routes first)
# https://www.playframework.com/documentation/latest/ScalaRouting
# ~~~~

# Notebook
GET     /notebooks                  controllers.notebook.NotebookController.list
GET     /notebooks                  controllers.notebook.NotebookController.search(title: String, mainText: String)
POST    /notebooks                  controllers.notebook.NotebookController.create
PUT     /notebooks/:title           controllers.notebook.NotebookController.update(title: String)
DELETE  /notebooks/:title           controllers.notebook.NotebookController.remove(title: String)

# An example controller showing a sample home page
#GET     /                           controllers.HomeController.index

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
